        <div class="container">
          
        <form action="/campgrounds" method="POST" id="Form" class="validated-form" enctype="multipart/form-data" novalidate>
          <h3>New Page</h3>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" placeholder="title" name="campground[title]" required>
                <div class="valid-feedback">Looks good</div>
              </div>
              
              <!-- <div class="mb-3">
